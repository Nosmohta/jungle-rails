

<% if product = Product.find_by(id: product_id) %>
    <tr>
      <td>
        <%= image_tag product.image.tiny %>
      </td>
      <td>
        <h4><%= product.name %></h4>
      </td>
      <td>
        <%= product.description %>
      </td>
      <td>
        <%= amount.to_s %>
      </td>
      <td>
        $<%= amount * product.price %>
      </td>
    </tr>
<% end %>
